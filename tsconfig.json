{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["chai", "mocha", "node"],
    "baseUrl": "src",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "paths": {
      "@fonts/*": [ "assets/fonts/*" ]
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}